@model IEnumerable<BookStore.Models.Cart>

@{
    ViewData["Title"] = "Корзина";
}

<section class="h-100" style="background-color: #fdf5e6;">
    <div class="container h-100 py-5">
        <div class="row d-flex justify-content-between align-items-center mb-4">
            <h3 class="fw-normal mb-0 text-black">Корзина</h3>
        </div>
        @foreach(var item in @Model)
        {
        
            <div class="card rounded-3 mb-4">
                <div class="card-body p-4">
                    <div class="row d-flex justify-content-between align-items-center">
                        <div class="col-md-2 col-lg-2 col-xl-2">
                            @foreach(var subitem in item.Book.BookPictures)
			                {
                                <img class="img-fluid rounded-3" src="~/Images/@subitem.PictureUri" alt = "Нет картинки">
			                }
                        </div>
                        <div class="col-md-3 col-lg-3 col-xl-3">
                            <p class="lead fw-normal mb-2">@item.Book.Name</p>
                            <p><span class="text-muted">@item.Book.Description</p>
                        </div>
                        <div class="col-md-3 col-lg-2 col-xl-2 offset-lg-1">
                            <h5 class="mb-0>">Цена: @item.Book.Price</h5>x<h5 class="mb-0">Количество: @item.Count</h5>
                            </div>
                        <div class="col-md-3 col-lg-3 col-xl-2 d-flex">
                            <a asp-action="plus" asp-route-id="@item.Id" class="btn btn-secondary me-2">
                                <i class="bi bi-node-plus-fill">+</i>
                                </a>
                                <a asp-action="minus" asp-route-id="@item.Id" class="btn btn-secondary me-2">
                                <i class="bi bi-node-plus-fill">-</i>
                            </a>
                            </div>  
                </div>
                <div class="d-flex justify-content-end">
                 <a class="btn btn-light btn-sm" asp-action="Delete" asp-route-id="@item.Id">Удалить</a>
                 </div>
                </div>
                </div>
        }
    </div>
    <div class="d-flex justify-content-center">
    <a class="btn btn-dark btn-lg" asp-action="Index" asp-controller="Carts">Оформить заказ</a>
    </div>
</section>